<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fundamentos.adcbank.controllers.MainController"
      spacing="20" alignment="CENTER" styleClass="root"
      stylesheets="@style.css">
    <Label text="ADC Bank - Dashboard" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
    <Separator/>
    <Label text="Balance:" style="-fx-font-weight: bold;"/>
    <Label fx:id="balanceLabel" style="-fx-font-size: 14;"/>
    <Label text="Token:" style="-fx-font-weight: bold;"/>
    <Label fx:id="tokenLabel" style="-fx-font-family: monospace; -fx-font-size: 14;"/>
    <Button fx:id="depositButton" text="Deposit" onAction="#handleDeposit"/>
    <Button fx:id="withdrawButton" text="Withdraw" onAction="#handleWithdraw"/>
    <Button fx:id="transferButton" text="Transfer" onAction="#handleTransfer"/>
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
</VBox>